<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:PointyStickBlend"
    x:Class="PointyStickBlend.InstructionView"
    d:DesignWidth="640" d:DesignHeight="480">

    <Grid x:Name="LayoutRoot" DataContext="{StaticResource instruction_view_model}">
        <DataGrid Margin="1,0,-1,0" ItemsSource="{Binding Model}" >
        </DataGrid>
    </Grid>
</UserControl>
