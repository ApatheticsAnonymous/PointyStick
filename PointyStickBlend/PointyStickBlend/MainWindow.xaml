<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="PointyStickBlend.MainWindow"
	x:Name="Window"
	xmlns:local="clr-namespace:PointyStickBlend" 
	Title="MainWindow"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot" Background="White">
	<TabControl HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Disabled">
		<TabItem Header="TabItem">
			<Grid Background="#FFE5E5E5">
				<local:MainView Margin="0,0,10,10" />
			</Grid>
		</TabItem>
		<TabItem Header="TabItem">
			<Grid Background="#FFE5E5E5"/>
		</TabItem>
	</TabControl>
	</Grid>
</Window>